{
  "name": "collabd",
  "version": "1.0.0",
  "description": "A distributed, peer-to-peer solution for collaborative text editing.",
  "homepage": "https://github.com/collabd/collabd#readme",
  "bugs": {
    "url": "https://github.com/collabd/collabd/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collabd/collabd.git"
  },
  "license": "MIT",
  "author": "collabd",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-client": "npm run build-client-static",
    "build-client-static": "rm -rf ./build/client && rsync -avrR --exclude='*.ts' ./client ./build",
    "build-server": "npm run lint && tsc --project ./configs/server.json",
    "build-docs": "./node_modules/.bin/typedoc --out docs/ ./server/ ./client/",
    "check-lint": "echo 'Checking code style' && ./node_modules/.bin/eslint --ext .ts,.js ./server/ ./client/ ./tests/",
    "dev": "npm run lint && ts-node-dev --respawn --transpileOnly ./server/index.ts",
    "lint": "echo 'Formatting code' && ./node_modules/.bin/eslint --fix --ext .ts,.js ./server/ ./client/ ./tests/",
    "prod": "npm run lint && npm run test && npm run build && npm start",
    "start": "node ./build/server/index.js",
    "test": "npm run test-client && npm run test-server",
    "test-client": "echo 'Starting client tests' && mocha -r ts-node/register ./tests/client/*.ts",
    "test-server": "echo 'Starting server tests' && mocha -r ts-node/register ./tests/server/*.ts",
    "tsc": "tsc"
  },
  "dependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-tsdoc": "^0.2.3",
    "express": "^4.17.1",
    "mocha": "^7.1.0",
    "prettier": "^1.19.1",
    "sinon": "^9.0.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "ts-node-dev": "^1.0.0-pre.44",
    "typedoc": "^0.17.3"
  }
}
